<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="8dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_item_bg"
        android:clickable="true"
        android:ellipsize="end"
        android:focusable="true"
        android:lineSpacingMultiplier="1.3"
        android:lines="2"
        android:maxLines="2"
        android:padding="16dp"
        android:textColor="@color/textDark"
        android:textSize="16sp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum condimentum maximus libero, vitae scelerisque leo porta at. Sed suscipit nulla id ultricies rhoncus. Quisque vel maximus tortor." />
</FrameLayout>
